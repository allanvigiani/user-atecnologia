{
    "openapi": "3.1.0",
    "info": {
        "title": "Schedule",
        "description": "Schedule microservice documentation",
        "version": "1.0.0",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
        "email": "vigianiallan@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "host": "localhost:3003/",
    "basePath": "/",
    "paths": {
        "/service": {
            "post": {
                "tags": [
                    "Service"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "description": "Cadastro de serviço",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RequestService"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Serviço cadastrado com sucesso!"
                    },
                    "400": {
                        "description": "Campos não recebidos"
                    },
                    "404": {
                        "description": "Já existe um serviço cadastrada com esse nome."
                    },
                    "500": {
                        "description": "Internal Server Error."
                    }
                }
            }
        },
        "/service/{serviceId}": {
            "get": {
                "tags": [
                    "Service"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                      "name": "serviceId",
                      "in": "path",
                      "description": "ID do serviço",
                      "required": true,
                      "type": "integer",
                      "format": "int64"
                    }
                ],
                "description": "Serviços",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ResponseService"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error."
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "description": "Autenticação com JWT",
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "RequestService": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome para cadastro de serviço",
                        "example": "Serviço teste 1"
                    },
                    "professional_name": {
                        "type": "string",
                        "description": "Nome para cadastro do professional que irá fazer o serviço",
                        "example": "John Albert"
                    },
                    "price": {
                        "type": "number",
                        "formart": "float",
                        "description": "Preço do serviço",
                        "example": 299.90
                    }
                }
            },
            "ResponseService": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID do serviço",
                        "example": 1
                    },                    
                    "name": {
                        "type": "string",
                        "description": "Nome da empresa cadastrada",
                        "example": "Company LTDA."
                    },
                    "professional_name": {
                        "type": "string",
                        "description": "Nome para cadastro do professional que irá fazer o serviço",
                        "example": "John Albert"
                    },
                    "price": {
                        "type": "number",
                        "formart": "float",
                        "description": "Preço do serviço",
                        "example": 299.90
                    },
                    "copany_id": {
                        "type": "integer",
                        "description": "ID da empresa que possui o serviço",
                        "example": 3
                    }
                }
                
            }
        }
    }
}